<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:layout_marginTop="1dp"
              android:elevation="2dp"
              android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/typebg_v"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1.5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="1.5dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/selector_foreground"
            android:gravity="center"
            android:orientation="vertical"
            android:stateListAnimator="@drawable/lift_on_touch">

            <TextView
                android:id="@+id/item_text1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/type_name"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_text2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="12sp"
                    tools:ignore="NestedWeights"/>

                <TextView
                    android:id="@+id/item_text3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/item_text3_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/item_text4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/cstore_red"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:visibility="gone"
            android:id="@+id/type_tag_v"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginEnd="70dp"
            android:elevation="2dp"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/less_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="start"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_less"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/add_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_add"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/add_less_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/less"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                tools:ignore="ButtonStyle"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>